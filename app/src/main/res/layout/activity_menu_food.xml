<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_menu_food">


    <RelativeLayout
        android:id="@+id/dashboard_fragment_Progressdialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:elevation="1dp"
        android:visibility="invisible">

        <ProgressBar
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:id="@+id/RLSearch"
        android:background="@color/colorPrimary"
        >


        <EditText
            android:id="@+id/editSearch"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_corner_search"
            android:drawableLeft="@drawable/ic_search"
            android:hint="Tìm kiếm món ăn"
            android:maxLines="1"
            android:padding="4dp"
            android:paddingStart="10dp"></EditText>
    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/dashboard_fragment_cant_find_restaurant"
        android:visibility="invisible"
        android:layout_below="@id/RLSearch"
        android:elevation="1dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="20sp"
            android:padding="15dp"
            android:textColor="@color/black"/>

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDSMon"
        android:layout_width="match_parent"
        android:layout_height="667dp"
        android:layout_below="@+id/RLSearch"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp">

    </androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="151dp"
                android:layout_height="match_parent"
                android:background="#DCCCCC">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Tổng tiền:"
                    android:textColor="#020202"
                    android:textSize="30sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="249dp"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnTongTien"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ED0E0E"
                    android:text="0đ"
                    android:onClick="ClickThemmon"
                    android:textColor="#F3EDED"
                    android:textSize="30sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>